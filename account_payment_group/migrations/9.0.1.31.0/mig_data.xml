<odoo>

    <!-- We want to keep behaviour to actual customers but not for newones -->

    <record model="ir.config_parameter">
        <field name="key">account_payment_group.customer_force_secondary_currency</field>
        <field name="value">True</field>
        <field name="group_ids" eval="[(4, ref('base.group_system'))]" />
    </record>

    <record model="ir.config_parameter">
        <field name="key">account_payment_group.supplier_force_secondary_currency</field>
        <field name="value">True</field>
        <field name="group_ids" eval="[(4, ref('base.group_system'))]" />
    </record>

    <record model="ir.config_parameter">
        <field name="key">account_payment_group.dont_allow_different_currencies</field>
        <field name="value">True</field>
        <field name="group_ids" eval="[(4, ref('base.group_system'))]" />
    </record>

</odoo>
